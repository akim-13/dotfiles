# Reload the configuration
alt+r;alt+h
 pkill sxhkd ; sxhkd &


# Core functionality
## Change brightness
XF86MonBrightness{Up,Down}
 brightnessctl s 10{+,-}

## Changing the Volume
XF86Audio{Raise,Lower}Volume
 pulsemixer --change-volume {+,-}5; kill -44 $(pidof dwmblocks)
XF86AudioMute
 pulsemixer --toggle-mute; kill -44 $(pidof dwmblocks)

## Switching layout (See /etc/X11/xorg.conf.d/30-keyboard.conf)
alt+Shift_L
 kill -45 $(pidof dwmblocks)

## Screenshot
alt+s;alt+s
 flameshot gui
alt+f;alt+s
 flameshot full -c -p ~/pix/ss


# Power menu
## Poweroff
super+shift+BackSpace
 poweroff

## Quit current session
super+alt+Q
 pkill Xorg

## Reboot
super+R
 reboot


# Misc
## Change wallpaper
alt+w
 rwp


# Launching programs
## Run the application launcher
alt+Return
 rofi -show run

## Terminal emulator
alt+space
 alacritty

## Browser
alt+q;alt+t
 prime-run qutebrowser
alt+b;alt+r
 brave

## Zoom
alt+z;alt+o
 zoom

## Typing trainer
alt+t;alt+p
 tipp10

## Password manager
alt+k;alt+p
 keepassxc

## Minecraft
alt+m;alt+c
 prime-run minecraft-launcher &

## Discord
alt+d;alt+s
 discord

## Messaging browser
alt+f;alt+e
 ferdi

## Notes
alt+o;alt+b
 obsidian

## Libreoffice
alt+l;+alt+o
 libreoffice
